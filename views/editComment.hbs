{{> editHeader}}

<body>
    <div class="posting-area">
        <h1>Edit Comment</h1>
        <form action="/comments/edit/{{comment._id}}" method="POST">
            <label for="content">Edit your comment:</label>
            <textarea id="content" name="content" rows="10" placeholder="Edit your comment here..." required>{{comment.content}}</textarea>
            <input type="submit" value="Save Changes">
        </form>
    </div>
</body>